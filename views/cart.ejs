<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="shortcut icon" href="//cdn.shopify.com/s/files/1/0054/6665/2718/files/logo_02_32x32.png?v=1606307450"
        type="image/png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Heebo:wght@100&family=Roboto:wght@100;300&family=Sen:wght@400;700&family=Signika:wght@500&family=Source+Sans+3:wght@200;300;400&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="/css/cart.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <!-- rating stars boottrap link -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" />
    <!-- footer icon cdn -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <title>Your Shopping Cart</title>
</head>

<body>
    <!-- navbar is importing from components folder -->

    <div id="header_div">
        <%- include("navbar"); %>
    </div>
    <!-- Sticky yello icon of Bella cash left bottom corner -->
    <div class="sticky-view"></div>

    <div class="main-container">
        <div class="after-navbar">
            <div class="current-page">Home <span>&#62;</span> Shopping Cart</div>
            <h4>MY CART</h4>
            <div class="countinue-shopping-ahref">
                <a id="countinue-shopping-ahref" href="/products" class="countinue-shopping-link">Countinue
                    Shopping <span>&#62;</span></a>
            </div>
        </div>
        <div class="cart-item-details">
            <div class="product-list-table">
                <div class="table-head">
                    <p>PRODUCTS</p>
                </div>
                <div class="cart-item">

                    <% bag.forEach(function(item){ %>
                        <div class="card">
                            <div class="item-card"><img src="<%= item.Img_url %>">
                                <div class="item-text">
                                    <div class="head-item-name">
                                        <p class="item-name">
                                            <%= item.Name %>
                                        </p>
                                    </div>
                                    <h4 class="item-price">Rs.<%= item.Price %>
                                    </h4>
                                    <div class="qty-div">
                                        <p>Quantity: </p>
                                    </div>
                                </div>
                            </div>
                            <div id="external-part">
                                <div class="ui qty-box"><button onclick="decrease(`<%= item._id %>`, `<%= item.Qty %>`)"
                                        id="dec">-</button><input type="number" id="qty" value="<%= item.Qty %>"><button
                                        onclick="increase(`<%= item._id %>`, `<%= item.Qty %>`)" id="inc">+</button>
                                </div>

                                <div onclick="removeProduct(`<%= item._id %>`)" class="remove">
                                    <button class="left"><button type="button" class="btn-close" disabled=""
                                            aria-label="Close"></button>
                                        <span>Remove</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <%}) %>

                </div>
            </div>
            <div class="cart-total-main_div">
                <div class="table-head">
                    <p>ORDER SUMMARY</p>
                </div>
                <div class="payemnt-details-box">
                    <div class="total">
                        <p>Total:</p>

                        <p id="cartValue">Rs. <%= totalval %>
                        </p>
                    </div>

                    <p>
                        or 4 interest-free payments of Rs. 399.00 with
                        <span><img src="https://cdn.sezzle.in/branding/2.0/Sezzle_Logo_FullColor.svg" alt="" /></span>
                    </p>
                    <div>
                        <button id="go_to_checkout">PROCEED TO CHECKOUT</button>
                    </div>
                    <div class="icon">
                        <div>
                            <img src="https://cdn.shopify.com/s/files/1/0054/6665/2718/files/Shipping_in_24_hrs.png?v=13393426083289990043"
                                alt="" />
                            <p>Rapid Order Shipping</p>
                        </div>
                        <!-- ////////////// -->
                        <div>
                            <img src="https://cdn.shopify.com/s/files/1/0054/6665/2718/files/Includes_Taxes_and_Shipping.png?v=6421662264027915738"
                                alt="" />
                            <p>No Hidden Taxes</p>
                        </div>
                        <!-- //////////////// -->
                        <div>
                            <img src="https://cdn.shopify.com/s/files/1/0054/6665/2718/files/Secure_Payment.png?v=1619255193"
                                alt="" />
                            <p>Pay Securely</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="best-seller-slide">
            <h3>BEST SELLER</h3>
            <div class="leftside l_btn">
                <img src="https://cdn2.iconfinder.com/data/icons/font-awesome/1792/angle-left-512.png" alt="" />
            </div>
            <div class="item-slider-div"></div>
            <div class="rightside r_btn">
                <img src="https://cdn2.iconfinder.com/data/icons/font-awesome/1792/angle-right-512.png" alt="" />
            </div>
        </div>
    </div>
    <footer>
        <%- include("footer"); %>
    </footer>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>
<script>
    function increase(documentId, qty) {
        fetch(`http://localhost:4000/cart/qtyi/${documentId}`, { method: 'PATCH' })

            .then((res) => {
                let userid=localStorage.getItem('uid');
                window.location.href = `http://localhost:4000/cart/${userid}`;
            })
            .catch((err) => {
                console.log("err:", err);
            });
    }

    function decrease(documentId, qty) {
        if (qty == 1) { //if Qty find 1 then remove the product from cart becouse after decrement Qty will become 0
            removeProduct(documentId)
        } else {
            // fetch(`http://localhost:3333/cart/qtyd/${documentId}`, { method: 'PATCH' })
            fetch(`http://localhost:4000/cart/qtyd/${documentId}`, { method: 'PATCH' })

                .then((res) => {
                    console.log("done")
                    let userid=localStorage.getItem('uid');
                    window.location.href = `http://localhost:4000/cart/${userid}`;
                })
                .catch((err) => {
                    console.log("err:", err);
                });
        }
    }

    function removeProduct(documentId) {
        fetch(`http://localhost:4000/cart/delete/${documentId}`)

            .then((res) => {
                // window.location.href = `http://localhost:4000/cart/${res.item.shopping_bag_id}`;
                let userid=localStorage.getItem('uid');
                window.location.href = `http://localhost:4000/cart/${userid}`;
            })
            .catch((err) => {
                console.log("err:", err);
            });
    }

</script>
<script src="/js/landingPageSlider.js"></script>
<script src="/js/cart_script.js"></script>
<script src="/js/landingPage.js"></script>